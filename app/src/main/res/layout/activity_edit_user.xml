<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#B8F3BB"
        android:gravity="center"
        android:text="Редактирование пользователя"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextEditUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="редактировать имя"
        android:inputType="textPersonName"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/editTextEditUserLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="редактировать фамилию"
        android:inputType="textPersonName"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/editTextEditPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:textSize="20sp"
        android:hint="редактировать номер телефона" />


    <Button
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#46A14A"
        android:text="Сохранить"
        android:textSize="20sp" />
</LinearLayout>